    <route
        id="log:statistic:get-log-frequency-count-statistic-collection"
        path="/log/statistic/frequency-count/{frequency}/from/{from}/to/{to}"
        methods="GET"
        controller="Carthage\Presentation\LogManagement\Server\RequestHandler\Log\Statistic\GetLogFrequencyCountStatisticCollectionRequestHandler::handle"
