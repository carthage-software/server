<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd"
>
    <!-- GetLogEntryFrequencyCountStatisticCollectionRequestHandler -->
    <route
        id="log:statistic:get-log-entry-frequency-count-statistic-collection"
        path="/log/statistic/entry-frequency-count/{frequency}/from/{from}/to/{to}"
        methods="GET"
        controller="Carthage\Presentation\LogManagement\Server\RequestHandler\Log\Statistic\GetLogEntryFrequencyCountStatisticCollectionRequestHandler::handle"
    />

    <!-- GetLogEntrySourceFrequencyStatisticCollectionRequestHandler -->
